<% layout("./layouts/boilerplate")-%>

<!-- Dashboard specific CSS -->
<link rel="stylesheet" href="/css/dashboard.css" />

<div class="container-fluid px-4 py-3">
  <!-- Dashboard Header -->
  <div class="dashboard-header">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1 class="mb-2">Welcome back, <%= user.username %>! ✈️</h1>
        <p class="mb-0 opacity-75">
          Ready for your next adventure? Manage your bookings and discover new
          destinations.
        </p>
      </div>
      <div class="col-md-4 text-md-end">
        <a href="/listings" class="btn find-stays-btn">
          <i class="bi bi-search me-2"></i>Explore New Stays
        </a>
      </div>
    </div>
  </div>

  <!-- Account Settings Quick Access -->
  <div class="mb-4">
    <!-- Email Verification Status -->
    <% if (!user.isEmailVerified) { %>
    <div class="alert alert-warning d-flex align-items-center mb-4">
      <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
      <div class="flex-grow-1">
        <h6 class="alert-heading mb-1">Email Verification Required</h6>
        <p class="mb-0">
          Please verify your email to access all features including password
          recovery and booking confirmations.
        </p>
      </div>
      <button class="btn btn-warning btn-sm" onclick="resendVerification()">
        <i class="bi bi-envelope me-1"></i>Resend Email
      </button>
    </div>
    <% } else { %>
    <div class="alert alert-success d-flex align-items-center mb-4">
      <i class="bi bi-check-circle-fill me-3 fs-4"></i>
      <div>
        <h6 class="alert-heading mb-1">Email Verified</h6>
        <p class="mb-0">
          Your account is fully verified and ready to use all features.
        </p>
      </div>
    </div>
    <% } %>

    <!-- Account Settings Panel -->
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white border-bottom">
        <div class="d-flex align-items-center">
          <i class="bi bi-person-gear me-2 text-primary fs-5"></i>
          <h5 class="mb-0">Account Settings</h5>
        </div>
      </div>
      <div class="card-body">
        <div class="row g-4">
          <!-- Current Email Info -->
          <div class="col-md-6">
            <div class="d-flex align-items-center p-3 bg-light rounded">
              <div class="me-3">
                <i class="bi bi-envelope-fill text-primary fs-4"></i>
              </div>
              <div>
                <h6 class="mb-1">Current Email</h6>
                <p class="mb-0 text-muted small"><%= user.email %></p>
                <% if (user.isEmailVerified) { %>
                <span class="badge bg-success small">Verified</span>
                <% } else { %>
                <span class="badge bg-warning small">Unverified</span>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Account Actions -->
          <div class="col-md-6">
            <div class="d-grid gap-2">
              <a href="/change-email" class="btn btn-outline-primary">
                <i class="bi bi-envelope-plus me-2"></i>Change Email Address
              </a>
              <a href="/update-password" class="btn btn-outline-secondary">
                <i class="bi bi-key me-2"></i>Update Password
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Wishlist Section -->
  <% if (user.role === 'user' && user.wishlist && user.wishlist.length > 0) { %>
  <div class="mb-5" id="wishlist">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h2 class="section-title mb-0">
        <i class="bi bi-heart-fill text-danger me-3"></i>My Wishlist
      </h2>
      <% if (user.wishlist.length > 4) { %>
      <button class="btn btn-outline-primary" onclick="scrollWishlist('right')">
        <i class="bi bi-arrow-right"></i>
      </button>
      <% } %>
    </div>

    <div class="wishlist-container" id="wishlistContainer">
      <div class="wishlist-scroll">
        <% user.wishlist.forEach((listing) => { %>
        <div
          class="wishlist-card"
          onclick="window.location.href='/listings/<%= listing._id %>'"
        >
          <div class="position-relative">
            <img
              src="<%= listing.image.url.replace('/upload/', '/upload/w_300,q_auto,f_auto/') %>"
              alt="<%= listing.title %>"
            />
            <button
              class="wishlist-remove-btn"
              onclick="event.stopPropagation(); toggleWishlist('<%= listing._id %>', this);"
              title="Remove from Wishlist"
            >
              <i class="bi bi-heart-fill"></i>
            </button>
          </div>
          <div class="wishlist-card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h6 class="wishlist-title"><%= listing.title %></h6>
              <% if (listing.avgRating > 0) { %>
              <span class="text-warning small">
                <i class="bi bi-star-fill me-1"></i><%=
                listing.avgRating.toFixed(1) %>
              </span>
              <% } %>
            </div>
            <p class="wishlist-location">
              <i class="bi bi-geo-alt me-1"></i><%= listing.location %>
            </p>
            <div class="wishlist-price">
              <strong>₹<%= listing.price.toLocaleString() %></strong>
              <small>/night</small>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Stats Cards -->
  <div class="stats-container">
    <div class="row g-3">
      <div class="col-lg-3 col-md-6">
        <div class="stat-card">
          <div class="stat-icon active">
            <i class="bi bi-calendar-check"></i>
          </div>
          <div class="stat-number active"><%= stats.active %></div>
          <p class="stat-label">Active Bookings</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="stat-card">
          <div class="stat-icon completed">
            <i class="bi bi-check-circle"></i>
          </div>
          <div class="stat-number completed"><%= stats.completed %></div>
          <p class="stat-label">Completed Trips</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="stat-card">
          <div class="stat-icon pending">
            <i class="bi bi-clock"></i>
          </div>
          <div class="stat-number pending"><%= stats.pending %></div>
          <p class="stat-label">Awaiting Decision</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="stat-card">
          <div class="stat-icon cancelled">
            <i class="bi bi-x-circle"></i>
          </div>
          <div class="stat-number cancelled"><%= stats.cancelled %></div>
          <p class="stat-label">Cancelled</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Bookings Sections -->
  <!-- Active Bookings -->
  <% if (bookings.active.length > 0) { %>
  <div class="mb-5">
    <h2 class="section-title">
      <i class="bi bi-calendar-check me-3 section-icon-active"></i>
      Your Active Bookings
    </h2>
    <div class="row g-4">
      <% bookings.active.forEach((booking) => { %>
      <div class="col-lg-4 col-md-6">
        <div class="booking-card position-relative">
          <% if (booking.listing.image && booking.listing.image.url) { %>
          <img
            src="<%= booking.listing.image.url %>"
            class="w-100"
            alt="<%= booking.listing.title %>"
          />
          <% } %>
          <span class="booking-status status-confirmed">Confirmed</span>

          <div class="p-4">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h5 class="mb-0 fw-bold"><%= booking.listing.title %></h5>
              <% if (booking.listing.avgRating > 0) { %>
              <span class="text-warning small">
                <i class="bi bi-star-fill me-1"></i><%=
                booking.listing.avgRating.toFixed(1) %>
              </span>
              <% } %>
            </div>
            <p class="text-muted mb-3">
              <i class="bi bi-geo-alt me-2"></i>
              <%= booking.listing.location %>, <%= booking.listing.country %>
            </p>

            <div class="booking-details mb-3">
              <div class="row">
                <div class="col-6">
                  <small class="text-muted d-block">Check-in</small>
                  <strong
                    ><%= new Date(booking.checkIn).toLocaleDateString('en-IN', {
                    day: 'numeric', month: 'short' }) %></strong
                  >
                </div>
                <div class="col-6">
                  <small class="text-muted d-block">Check-out</small>
                  <strong
                    ><%= new Date(booking.checkOut).toLocaleDateString('en-IN',
                    { day: 'numeric', month: 'short' }) %></strong
                  >
                </div>
              </div>
              <hr class="my-3" />
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <small class="text-muted d-block">Guests</small>
                  <strong
                    ><%= booking.guests %> <%= booking.guests === 1 ? 'Guest' :
                    'Guests' %></strong
                  >
                </div>
                <div class="text-end">
                  <div class="booking-price">
                    ₹<%= booking.totalPrice.toLocaleString() %>
                  </div>
                  <small class="text-muted">Total Price</small>
                </div>
              </div>
            </div>

            <a
              href="/listings/<%= booking.listing._id %>/bookings/<%= booking._id %>"
              class="btn btn-primary-modern w-100"
            >
              <i class="bi bi-eye me-2"></i>View Details
            </a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <!-- Pending Bookings -->
  <% if (bookings.pending.length > 0) { %>
  <div class="mb-5">
    <h2 class="section-title">
      <i class="bi bi-clock me-3 section-icon-pending"></i>
      Awaiting Your Decision
    </h2>
    <div class="alert-modern">
      <i class="bi bi-info-circle me-2"></i>
      <strong>Action Required:</strong> These bookings need host confirmation
      within 24 hours. Don't miss out on your dream destinations!
    </div>
    <div class="row g-4">
      <% bookings.pending.forEach((booking) => { %>
      <div class="col-lg-4 col-md-6">
        <div class="booking-card position-relative">
          <% if (booking.listing.image && booking.listing.image.url) { %>
          <img
            src="<%= booking.listing.image.url %>"
            class="w-100"
            alt="<%= booking.listing.title %>"
          />
          <% } %> <% const now = new Date(); const expiresAt = booking.expiresAt
          ? new Date(booking.expiresAt) : null; const isExpiringSoon = expiresAt
          && (expiresAt - now < 3 * 60 * 60 * 1000); // Less than 3 hours const
          isExpired = expiresAt && now > expiresAt; %> <% if (isExpired) { %>
          <span class="booking-status status-expired">Expired</span>
          <% } else if (isExpiringSoon) { %>
          <span class="booking-status status-expiring">Expiring Soon!</span>
          <% } else { %>
          <span class="booking-status status-pending">Pending</span>
          <% } %>

          <div class="p-4">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h5 class="mb-0 fw-bold"><%= booking.listing.title %></h5>
              <% if (booking.listing.avgRating > 0) { %>
              <span class="text-warning small">
                <i class="bi bi-star-fill me-1"></i><%=
                booking.listing.avgRating.toFixed(1) %>
              </span>
              <% } %>
            </div>
            <p class="text-muted mb-3">
              <i class="bi bi-geo-alt me-2"></i>
              <%= booking.listing.location %>, <%= booking.listing.country %>
            </p>

            <div class="booking-details mb-3">
              <div class="row">
                <div class="col-6">
                  <small class="text-muted d-block">Check-in</small>
                  <strong
                    ><%= new Date(booking.checkIn).toLocaleDateString('en-IN', {
                    day: 'numeric', month: 'short' }) %></strong
                  >
                </div>
                <div class="col-6">
                  <small class="text-muted d-block">Check-out</small>
                  <strong
                    ><%= new Date(booking.checkOut).toLocaleDateString('en-IN',
                    { day: 'numeric', month: 'short' }) %></strong
                  >
                </div>
              </div>
              <hr class="my-3" />
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <small class="text-muted d-block">Guests</small>
                  <strong
                    ><%= booking.guests %> <%= booking.guests === 1 ? 'Guest' :
                    'Guests' %></strong
                  >
                </div>
                <div class="text-end">
                  <div class="booking-price">
                    ₹<%= booking.totalPrice.toLocaleString() %>
                  </div>
                  <small class="text-muted">Total Price</small>
                </div>
              </div>
            </div>

            <!-- Expiration countdown for pending bookings -->
            <% if (booking.status === 'pending' && expiresAt && !isExpired) { %>
            <div class="alert alert-info py-2 mb-3">
              <i class="bi bi-clock text-info me-2"></i>
              <small
                >Expires in:
                <span
                  class="countdown-timer fw-bold"
                  data-expiry="<%= booking.expiresAt %>"
                >
                  <% const timeLeft = expiresAt - now; const hoursLeft =
                  Math.floor(timeLeft / (1000 * 60 * 60)); const minutesLeft =
                  Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60)); %> <%
                  if (hoursLeft < 2) { %>
                  <span class="text-danger"
                    ><%= hoursLeft %>h <%= minutesLeft %>m</span
                  >
                  <% } else if (hoursLeft < 6) { %>
                  <span class="text-warning"
                    ><%= hoursLeft %>h <%= minutesLeft %>m</span
                  >
                  <% } else { %>
                  <span class="text-info"
                    ><%= hoursLeft %>h <%= minutesLeft %>m</span
                  >
                  <% } %>
                </span>
              </small>
            </div>
            <% } %> <% if (isExpired) { %>
            <button class="btn w-100 btn-secondary" disabled>
              <i class="bi bi-x-circle me-2"></i>Booking Expired
            </button>
            <% } else { %>
            <a
              href="/listings/<%= booking.listing._id %>/bookings/<%= booking._id %>"
              class="btn w-100 <%= isExpiringSoon ? 'btn-warning' : 'btn-pending-action' %>"
            >
              <i class="bi bi-hand-thumbs-up me-2"></i><%= isExpiringSoon ?
              'Waiting for confirmation (Urgent!)' : 'Waiting for your confirmation' %>
            </a>
            <% } %>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <!-- Past Bookings -->
  <% if (bookings.past.length > 0) { %>
  <div class="mb-5">
    <h2 class="section-title">
      <i class="bi bi-check-circle me-3 section-icon-completed"></i>
      Your Travel Memories
    </h2>
    <div class="row g-4">
      <% bookings.past.slice(0, 6).forEach((booking) => { %>
      <div class="col-lg-4 col-md-6">
        <div class="booking-card position-relative booking-card-completed">
          <% if (booking.listing.image && booking.listing.image.url) { %>
          <img
            src="<%= booking.listing.image.url %>"
            class="w-100"
            alt="<%= booking.listing.title %>"
          />
          <% } %>
          <span class="booking-status booking-status-completed">Completed</span>

          <div class="p-4">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h5 class="mb-0 fw-bold"><%= booking.listing.title %></h5>
              <% if (booking.listing.avgRating > 0) { %>
              <span class="text-warning small">
                <i class="bi bi-star-fill me-1"></i><%=
                booking.listing.avgRating.toFixed(1) %>
              </span>
              <% } %>
            </div>
            <p class="text-muted mb-3">
              <i class="bi bi-geo-alt me-2"></i>
              <%= booking.listing.location %>, <%= booking.listing.country %>
            </p>

            <div class="booking-details mb-3">
              <div class="row">
                <div class="col-6">
                  <small class="text-muted d-block">Stayed</small>
                  <strong
                    ><%= new Date(booking.checkIn).toLocaleDateString('en-IN', {
                    day: 'numeric', month: 'short' }) %></strong
                  >
                </div>
                <div class="col-6">
                  <small class="text-muted d-block">To</small>
                  <strong
                    ><%= new Date(booking.checkOut).toLocaleDateString('en-IN',
                    { day: 'numeric', month: 'short' }) %></strong
                  >
                </div>
              </div>
              <hr class="my-3" />
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <small class="text-muted d-block">Guests</small>
                  <strong
                    ><%= booking.guests %> <%= booking.guests === 1 ? 'Guest' :
                    'Guests' %></strong
                  >
                </div>
              </div>
            </div>

            <div class="d-flex gap-2">
              <a
                href="/listings/<%= booking.listing._id %>/bookings/<%= booking._id %>"
                class="btn btn-outline-modern flex-fill"
              >
                <i class="bi bi-eye me-1"></i>Details
              </a>
              <a
                href="/listings/<%= booking.listing._id %>"
                class="btn btn-primary-modern flex-fill"
              >
                <i class="bi bi-arrow-repeat me-1"></i>Book Again
              </a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <% if (bookings.past.length > 6) { %>
    <div class="text-center mt-4">
      <button class="btn btn-outline-modern" onclick="showAllPastBookings()">
        <i class="bi bi-chevron-down me-2"></i>Show More Memories
      </button>
    </div>
    <% } %>
  </div>
  <% } %>

  <!-- Cancelled Bookings (Collapsible) -->
  <% if (bookings.cancelled.length > 0) { %>
  <div class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="section-title mb-0">
        <i class="bi bi-x-circle me-3 section-icon-cancelled"></i>
        Cancelled Bookings (<%= bookings.cancelled.length %>)
      </h2>
      <button
        class="btn btn-outline-modern"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#cancelledBookings"
        aria-expanded="true"
        aria-controls="cancelledBookings"
      >
        <i class="bi bi-chevron-down"></i>
      </button>
    </div>
    <div class="collapse" id="cancelledBookings">
      <div class="row g-4">
        <% bookings.cancelled.forEach((booking) => { %>
        <div class="col-lg-4 col-md-6">
          <div class="booking-card position-relative booking-card-cancelled">
            <% if (booking.listing.image && booking.listing.image.url) { %>
            <img
              src="<%= booking.listing.image.url %>"
              class="w-100"
              alt="<%= booking.listing.title %>"
            />
            <% } %>
            <span class="booking-status status-cancelled">Cancelled</span>

            <div class="p-4">
              <div
                class="d-flex justify-content-between align-items-start mb-2"
              >
                <h5 class="mb-0 fw-bold text-muted">
                  <%= booking.listing.title %>
                </h5>
                <% if (booking.listing.avgRating > 0) { %>
                <span class="text-warning small">
                  <i class="bi bi-star-fill me-1"></i><%=
                  booking.listing.avgRating.toFixed(1) %>
                </span>
                <% } %>
              </div>
              <p class="text-muted mb-3">
                <i class="bi bi-geo-alt me-2"></i>
                <%= booking.listing.location %>, <%= booking.listing.country %>
              </p>

              <div class="booking-details mb-3">
                <div class="row">
                  <div class="col-6">
                    <small class="text-muted d-block">Was for</small>
                    <strong class="text-muted"
                      ><%= new Date(booking.checkIn).toLocaleDateString('en-IN',
                      { day: 'numeric', month: 'short' }) %></strong
                    >
                  </div>
                  <div class="col-6">
                    <small class="text-muted d-block">To</small>
                    <strong class="text-muted"
                      ><%= new
                      Date(booking.checkOut).toLocaleDateString('en-IN', { day:
                      'numeric', month: 'short' }) %></strong
                    >
                  </div>
                </div>
                <hr class="my-3" />
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <small class="text-muted d-block">Guests</small>
                    <strong class="text-muted"
                      ><%= booking.guests %> <%= booking.guests === 1 ? 'Guest'
                      : 'Guests' %></strong
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Empty State -->
  <% if (stats.total === 0) { %>
  <div class="empty-state">
    <i class="bi bi-airplane"></i>
    <h3>Your Travel Journey Awaits!</h3>
    <p>
      Ready to explore the world? Discover amazing destinations, cozy homestays,
      and unforgettable experiences.
    </p>
    <a href="/listings" class="btn btn-color btn-md"> Start Exploring </a>
  </div>
  <% } %>
</div>

<script src="/js/user-dashboard.js"></script>
<script src="/js/dashboard-wishlist.js"></script>

<script>
  // Resend email verification
  async function resendVerification() {
    try {
      const response = await fetch("/send-verification", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
      });

      const result = await response.json();

      if (result.success) {
        alert("✅ Verification email sent! Please check your inbox.");
      } else {
        alert("❌ " + (result.error || "Failed to send verification email"));
      }
    } catch (error) {
      console.error("Error sending verification:", error);
      alert("❌ Failed to send verification email. Please try again.");
    }
  }
</script>
