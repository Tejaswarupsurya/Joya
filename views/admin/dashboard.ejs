<% layout("./layouts/boilerplate")-%>

<!-- Dashboard specific CSS -->
<link rel="stylesheet" href="/css/dashboard.css" />
<link rel="stylesheet" href="/css/host-dashboard.css" />

<div class="container mt-4 admin-dashboard">
  <!-- Admin Dashboard Header -->
  <div class="dashboard-header mb-4">
    <div class="row align-items-center">
      <div class="col-md-8">
        <div class="d-flex align-items-center">
          <!-- Admin Avatar -->
          <div class="host-avatar-container me-3">
            <img
              src="https://res.cloudinary.com/dcvaeebuf/image/upload/v1759743353/host1.jpg"
              alt="Admin"
              class="host-avatar"
            />
          </div>
          <div>
            <h1 class="mb-2">
              <i class="bi bi-shield-shaded me-2"></i>Admin Dashboard - Welcome,
              <%= user.username %>!
            </h1>
            <p class="mb-0 opacity-75">
              Manage host applications, oversee the platform, and ensure quality
              standards.
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-4 text-md-end">
        <div class="d-flex gap-2 justify-content-end">
          <span class="badge badge-total-count fs-6" id="totalCount">
            <%= applications.length %> Applications
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if (applications.length === 0) { %>
      <div class="text-center py-5">
        <i class="bi bi-inbox text-muted" style="font-size: 4rem"></i>
        <h4 class="text-muted mt-3">No Host Applications</h4>
        <p class="text-muted">No users have applied to become hosts yet.</p>
      </div>
      <% } else { %>

      <!-- Filter Tabs -->
      <ul class="nav nav-tabs mb-4" id="statusTabs" role="tablist">
        <li class="nav-item" role="presentation">
          <button
            class="nav-link active"
            id="all-tab"
            data-filter="all"
            type="button"
          >
            All Applications
            <span class="badge bg-secondary ms-1" id="all-count"
              ><%= applications.length %></span
            >
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="pending-tab"
            data-filter="pending"
            type="button"
          >
            Pending
            <span
              class="badge badge-status-pending text-dark ms-1"
              id="pending-count"
              >0</span
            >
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="approved-tab"
            data-filter="approved"
            type="button"
          >
            Approved
            <span class="badge badge-status-approved ms-1" id="approved-count"
              >0</span
            >
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="rejected-tab"
            data-filter="rejected"
            type="button"
          >
            Rejected
            <span class="badge badge-status-rejected ms-1" id="rejected-count"
              >0</span
            >
          </button>
        </li>
      </ul>

      <!-- Applications Table -->
      <div id="applicationsTable">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>Photo</th>
                <th>Username</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Dates</th>
                <th>Status</th>
                <th>Actions/Info</th>
              </tr>
            </thead>
            <tbody id="applicationsTableBody">
              <% applications.forEach((application) => { %>
              <tr
                class="application-row"
                data-status="<%= application.host.status %>"
              >
                <td>
                  <% if (application.host.avatar && application.host.avatar.url)
                  { %>
                  <img
                    src="<%= application.host.avatar.url %>"
                    alt="Profile"
                    class="rounded-circle"
                    style="width: 40px; height: 40px; object-fit: cover"
                  />
                  <% } else { %>
                  <i class="bi bi-person-circle" style="font-size: 2rem"></i>
                  <% } %>
                </td>
                <td><%= application.username %></td>
                <td><%= application.host.fullName %></td>
                <td><%= application.email %></td>
                <td><%= application.host.phone %></td>
                <td>
                  <!-- Applied Date -->
                  <div class="d-flex flex-column">
                    <% if (application.host.appliedAt) { %>
                    <small class="text-muted">
                      <i class="bi bi-calendar-plus me-1"></i>
                      Applied: <%= new
                      Date(application.host.appliedAt).toLocaleDateString('en-IN')
                      %>
                    </small>
                    <% } %>

                    <!-- Approved Date (only for approved applications) -->
                    <% if (application.host.status === 'approved' &&
                    application.host.approvedAt) { %>
                    <small class="text-success">
                      <i class="bi bi-calendar-check me-1"></i>
                      Approved: <%= new
                      Date(application.host.approvedAt).toLocaleDateString('en-IN')
                      %>
                    </small>
                    <% } %>

                    <!-- Fallback for missing applied date -->
                    <% if (!application.host.appliedAt) { %>
                    <small class="text-muted">
                      <i class="bi bi-calendar-x me-1"></i>
                      No date available
                    </small>
                    <% } %>
                  </div>
                </td>
                <td>
                  <% if (application.host.status === 'pending') { %>
                  <span class="badge badge-status-pending">
                    <i class="bi bi-clock me-1"></i>Pending
                  </span>
                  <% } else if (application.host.status === 'approved') { %>
                  <span class="badge badge-status-approved">
                    <i class="bi bi-check-circle me-1"></i>Approved
                  </span>
                  <% } else if (application.host.status === 'rejected') { %>
                  <span class="badge badge-status-rejected">
                    <i class="bi bi-x-circle me-1"></i>Rejected
                  </span>
                  <% } %>
                </td>
                <td>
                  <% if (application.host.status === 'pending') { %>
                  <!-- Action buttons for pending applications -->
                  <div class="btn-group btn-group-sm">
                    <form
                      method="POST"
                      action="/admin/<%= application._id %>/approve"
                      class="d-inline"
                    >
                      <button
                        type="submit"
                        class="btn btn-outline-success btn-sm"
                        title="Approve Application"
                      >
                        <i class="bi bi-check"></i>
                      </button>
                    </form>
                    <form
                      method="POST"
                      action="/admin/<%= application._id %>/reject"
                      class="d-inline"
                    >
                      <button
                        type="submit"
                        class="btn btn-outline-danger btn-sm"
                        onclick="return confirm('Are you sure you want to reject this application?')"
                        title="Reject Application"
                      >
                        <i class="bi bi-x"></i>
                      </button>
                    </form>
                  </div>
                  <% } else { %>
                  <!-- No actions for approved/rejected -->
                  <span class="text-muted">
                    <i class="bi bi-check-circle me-1"></i>Completed
                  </span>
                  <% } %>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Empty State for Filtered Results -->
      <div id="emptyState" class="text-center py-5" style="display: none">
        <i class="bi bi-inbox text-muted" style="font-size: 4rem"></i>
        <h4 class="text-muted mt-3" id="emptyStateTitle">
          No Applications Found
        </h4>
        <p class="text-muted" id="emptyStateMessage">
          No applications match the current filter.
        </p>
      </div>
      <% } %>
    </div>
  </div>
</div>

<script src="/js/admin-dashboard.js"></script>
