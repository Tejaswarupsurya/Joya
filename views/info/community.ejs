<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <!-- Header -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="color: #fc5c79">Community</h1>
        <p class="lead text-muted">
          Join our vibrant community of travelers and hosts
        </p>
      </div>
      <div class="row">
        <div class="col-lg-10 mx-auto">

          <!-- Community Values -->
          <div class="card border-0 shadow-sm mb-5">
            <div class="card-body p-5">
              <h3 class="text-primary mb-4">Our Community Values</h3>
              <div class="row g-4">
                <div class="col-md-4">
                  <div class="text-center">
                    <i class="bi bi-heart-fill text-danger display-4 mb-3"></i>
                    <h5>Respect</h5>
                    <p class="text-muted">
                      Treat everyone with kindness, dignity, and respect
                      regardless of background or beliefs.
                    </p>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="text-center">
                    <i
                      class="bi bi-shield-check text-success display-4 mb-3"
                    ></i>
                    <h5>Trust</h5>
                    <p class="text-muted">
                      Build trust through honest communication, reliability, and
                      transparency.
                    </p>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="text-center">
                    <i
                      class="bi bi-people-fill text-primary display-4 mb-3"
                    ></i>
                    <h5>Inclusion</h5>
                    <p class="text-muted">
                      Welcome everyone and celebrate the diversity that makes
                      our community stronger.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- For Guests -->
          <div class="card border-0 shadow-sm mb-5">
            <div class="card-body p-5">
              <h3 class="text-primary mb-4">
                <i class="bi bi-person-check me-2"></i>Guest Guidelines
              </h3>
              <div class="row g-4">
                <div class="col-md-6">
                  <h5 class="text-dark">During Your Stay</h5>
                  <ul class="list-unstyled">
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Respect the Space:</strong> Treat the property as
                      if it were your own home
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Follow House Rules:</strong> Adhere to all rules
                      set by your host
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Be Considerate:</strong> Keep noise levels
                      appropriate and respect neighbors
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Communicate Openly:</strong> Keep hosts informed
                      of any issues or needs
                    </li>
                  </ul>
                </div>
                <div class="col-md-6">
                  <h5 class="text-dark">Community Interaction</h5>
                  <ul class="list-unstyled">
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Be Honest:</strong> Provide accurate information
                      in your profile and reviews
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Leave Thoughtful Reviews:</strong> Help future
                      guests with detailed, honest feedback
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Report Issues:</strong> Notify us of any safety or
                      community violations
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Be Patient:</strong> Understand that hosts are
                      people too, with their own schedules
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- For Hosts -->
          <div class="card border-0 shadow-sm mb-5">
            <div class="card-body p-5">
              <h3 class="text-primary mb-4">
                <i class="bi bi-house-door-fill me-2"></i>Host Guidelines
              </h3>
              <div class="row g-4">
                <div class="col-md-6">
                  <h5 class="text-dark">Hosting Excellence</h5>
                  <ul class="list-unstyled">
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Accurate Listings:</strong> Provide honest,
                      detailed descriptions and recent photos
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Quick Responses:</strong> Reply to inquiries and
                      messages promptly
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Clear Rules:</strong> Set reasonable house rules
                      and communicate them clearly
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Clean & Safe:</strong> Maintain high standards of
                      cleanliness and safety
                    </li>
                  </ul>
                </div>
                <div class="col-md-6">
                  <h5 class="text-dark">Guest Relations</h5>
                  <ul class="list-unstyled">
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Welcome Everyone:</strong> Do not discriminate
                      based on any personal characteristics
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Be Available:</strong> Provide assistance when
                      needed and be reachable
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Respect Privacy:</strong> Give guests space while
                      being available for help
                    </li>
                    <li class="mb-3">
                      <i class="bi bi-check-circle text-success me-2"></i>
                      <strong>Fair Reviews:</strong> Leave honest, constructive
                      reviews for guests
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Prohibited Activities -->
          <div class="card border-danger mb-5">
            <div class="card-header bg-danger text-white">
              <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>Prohibited
                Activities
              </h4>
            </div>
            <div class="card-body p-4">
              <div class="row g-4">
                <div class="col-md-6">
                  <h6 class="text-danger">Strictly Forbidden:</h6>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i
                      >Discrimination or harassment of any kind
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i>Illegal
                      activities or drug use
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i
                      >Unauthorized parties or events
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i>Damage to
                      property or belongings
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i>Violating
                      local laws or regulations
                    </li>
                  </ul>
                </div>
                <div class="col-md-6">
                  <h6 class="text-danger">Platform Violations:</h6>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i>Fake
                      profiles or fraudulent listings
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i
                      >Circumventing platform fees
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i>Spam,
                      scams, or misleading content
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i>Violating
                      privacy or sharing personal data
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-x-circle text-danger me-2"></i>Multiple
                      accounts or false identities
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Reporting & Enforcement -->
          <div class="card border-0 shadow-sm mb-5">
            <div class="card-body p-5">
              <h3 class="text-primary mb-4">Reporting & Enforcement</h3>
              <div class="row g-4">
                <div class="col-md-4">
                  <div class="text-center">
                    <i class="bi bi-flag-fill text-warning display-4 mb-3"></i>
                    <h5>Report Issues</h5>
                    <p class="text-muted">
                      Report any violations or concerns through our platform or
                      contact support directly.
                    </p>
                    <a href="/info/contact" class="btn btn-warning"
                      >Report Now</a
                    >
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="text-center">
                    <i class="bi bi-search text-info display-4 mb-3"></i>
                    <h5>Investigation</h5>
                    <p class="text-muted">
                      Our trust and safety team investigates all reports
                      thoroughly and fairly.
                    </p>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="text-center">
                    <i class="bi bi-shield-x text-danger display-4 mb-3"></i>
                    <h5>Consequences</h5>
                    <p class="text-muted">
                      Violations may result in warnings, suspensions, or
                      permanent account removal.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Building Our Community -->
          <div class="card bg-primary text-white mb-5">
            <div class="card-body p-5 text-center">
              <h3 class="mb-4">Building Our Community Together</h3>
              <p class="lead mb-4">
                Every interaction contributes to our community culture. By
                following these guidelines, you help create positive experiences
                for everyone on Joya.
              </p>
              <div class="row g-3">
                <div class="col-md-4">
                  <a
                    href="/info/help-center"
                    class="btn btn-light btn-lg w-100"
                  >
                    <i class="bi bi-question-circle me-2"></i>Help Center
                  </a>
                </div>
                <div class="col-md-4">
                  <a
                    href="/info/contact"
                    class="btn btn-outline-light btn-lg w-100"
                  >
                    <i class="bi bi-chat-dots me-2"></i>Contact Support
                  </a>
                </div>
                <div class="col-md-4">
                  <a
                    href="/info/safety"
                    class="btn btn-outline-light btn-lg w-100"
                  >
                    <i class="bi bi-shield-check me-2"></i>Safety Resources
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Community Stats -->
          <div class="text-center">
            <h4 class="text-primary mb-4">Our Growing Community</h4>
            <div class="row g-4">
              <div class="col-md-3">
                <div class="card border-0">
                  <div class="card-body">
                    <h2 class="text-primary">50,000+</h2>
                    <p class="text-muted">Active Users</p>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="card border-0">
                  <div class="card-body">
                    <h2 class="text-success">5,000+</h2>
                    <p class="text-muted">Verified Hosts</p>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="card border-0">
                  <div class="card-body">
                    <h2 class="text-info">98%</h2>
                    <p class="text-muted">Positive Reviews</p>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="card border-0">
                  <div class="card-body">
                    <h2 class="text-warning">4.8</h2>
                    <p class="text-muted">Average Rating</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/search.js"></script>
  </div>
</div>
