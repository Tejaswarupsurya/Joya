<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <!-- Header -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="color: #fc5c79">
          Safety & Security
        </h1>
                <p class="lead text-muted">
                  Your safety is our top priority at Joya
                </p>
              </div>

              <!-- Safety Overview -->
              <div class="row g-4 mb-5">
                <div class="col-md-4">
                  <div class="card h-100 text-center border-danger">
                    <div class="card-body p-4">
                      <i
                        class="bi bi-shield-fill-check text-danger display-4 mb-3"
                      ></i>
                      <h5>Verified Users</h5>
                      <p class="text-muted">
                        All users undergo identity verification with government
                        ID and phone number confirmation.
                      </p>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card h-100 text-center border-warning">
                    <div class="card-body p-4">
                      <i
                        class="bi bi-camera-video text-warning display-4 mb-3"
                      ></i>
                      <h5>Property Monitoring</h5>
                      <p class="text-muted">
                        Smart check-in systems and property monitoring for
                        enhanced security.
                      </p>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card h-100 text-center border-success">
                    <div class="card-body p-4">
                      <i
                        class="bi bi-telephone-fill text-success display-4 mb-3"
                      ></i>
                      <h5>24/7 Emergency Support</h5>
                      <p class="text-muted">
                        Round-the-clock emergency assistance and rapid response
                        team.
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- For Guests Section -->
              <div class="card border-0 shadow-sm mb-5">
                <div class="card-body p-5">
                  <h3 class="text-primary mb-4">
                    <i class="bi bi-person-check me-2"></i>For Guests
                  </h3>
                  <div class="row g-4">
                    <div class="col-md-6">
                      <h5 class="text-dark">Before Booking</h5>
                      <ul class="list-unstyled">
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Read all property reviews and host ratings
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Verify property photos and amenities
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Check host response time and communication
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Review neighborhood safety information
                        </li>
                      </ul>
                    </div>
                    <div class="col-md-6">
                      <h5 class="text-dark">During Your Stay</h5>
                      <ul class="list-unstyled">
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Keep your booking details private
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Follow all house rules and safety guidelines
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Report any safety concerns immediately
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Use our secure messaging system
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>

              <!-- For Hosts Section -->
              <div class="card border-0 shadow-sm mb-5">
                <div class="card-body p-5">
                  <h3 class="text-primary mb-4">
                    <i class="bi bi-house-door-fill me-2"></i>For Hosts
                  </h3>
                  <div class="row g-4">
                    <div class="col-md-6">
                      <h5 class="text-dark">Property Safety</h5>
                      <ul class="list-unstyled">
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Install smoke and carbon monoxide detectors
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Provide first aid kit and emergency contacts
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Secure all valuable items
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Check and maintain all appliances regularly
                        </li>
                      </ul>
                    </div>
                    <div class="col-md-6">
                      <h5 class="text-dark">Guest Screening</h5>
                      <ul class="list-unstyled">
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Review guest profiles and previous reviews
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Communicate clearly about house rules
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Use our secure check-in process
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-check-circle text-success me-2"></i
                          >Report suspicious activity immediately
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Emergency Procedures -->
              <div class="card bg-danger text-white mb-5">
                <div class="card-body p-5">
                  <h3 class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i
                    >Emergency Procedures
                  </h3>
                  <div class="row g-4">
                    <div class="col-md-4">
                      <h5>Emergency Contacts</h5>
                      <p>
                        Police: 100<br />Fire: 101<br />Medical: 108<br />Joya
                        Emergency: +91-9999-888-777
                      </p>
                    </div>
                    <div class="col-md-4">
                      <h5>Report Incident</h5>
                      <p>
                        Use our 24/7 safety hotline or in-app emergency button
                        for immediate assistance.
                      </p>
                    </div>
                    <div class="col-md-4">
                      <h5>Safety Resources</h5>
                      <p>
                        Access safety guides, local emergency services, and
                        neighborhood safety information.
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Trust & Safety Features -->
              <div class="mb-5">
                <h3 class="text-center text-primary mb-4">
                  Trust & Safety Features
                </h3>
                <div class="row g-4">
                  <div class="col-md-3">
                    <div class="text-center">
                      <i
                        class="bi bi-credit-card-2-front text-primary display-4 mb-3"
                      ></i>
                      <h6>Secure Payments</h6>
                      <p class="text-muted small">
                        PCI-compliant payment processing with fraud protection
                      </p>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="text-center">
                      <i
                        class="bi bi-star-fill text-warning display-4 mb-3"
                      ></i>
                      <h6>Review System</h6>
                      <p class="text-muted small">
                        Transparent reviews from verified bookings only
                      </p>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="text-center">
                      <i
                        class="bi bi-geo-alt-fill text-success display-4 mb-3"
                      ></i>
                      <h6>Location Verification</h6>
                      <p class="text-muted small">
                        GPS-verified property locations and addresses
                      </p>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="text-center">
                      <i class="bi bi-lock-fill text-danger display-4 mb-3"></i>
                      <h6>Data Protection</h6>
                      <p class="text-muted small">
                        End-to-end encryption for all personal data
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Call to Action -->
              <div class="text-center">
                <div class="alert alert-info">
                  <h5>Have Safety Concerns?</h5>
                  <p class="mb-3">
                    Our safety team is here to help 24/7. Don't hesitate to
                    reach out.
                  </p>
                  <a href="/info/contact" class="btn btn-primary"
                    >Contact Safety Team</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>

        <script src="/js/search.js"></script>
      </div>
    </div>
  </div>
</div>
