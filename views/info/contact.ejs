  <!-- Account Recovery Section -->
  <div class="row mt-5" id="account-recovery">
    <div class="col-lg-8 mx-auto">
      <div class="card shadow">
        <div class="card-header bg-warning text-dark">
          <h4 class="mb-0">üÜò Account Recovery Request</h4>
        </div>
        <div class="card-body">
          <div class="alert alert-info">
            <strong>üìß Wrong Email During Signup?</strong>
            <p class="mb-0">
              If you entered the wrong email during signup or can't access your
              email account, fill out this form and our support team will help
              you recover your account.
            </p>
          </div>

          <form action="/contact-support" method="POST">
            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label">Your Username *</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                required
                placeholder="Enter your Joya username"
              />
            </div>

            <!-- Wrong Email -->
            <div class="mb-3">
              <label for="wrongEmail" class="form-label"
                >Email Used During Signup (Wrong Email)</label
              >
              <input
                type="email"
                class="form-control"
                id="wrongEmail"
                name="wrongEmail"
                placeholder="The incorrect email you registered with"
              />
            </div>

            <!-- Correct Email -->
            <div class="mb-3">
              <label for="correctEmail" class="form-label"
                >Your Correct Email Address *</label
              >
              <input
                type="email"
                class="form-control"
                id="correctEmail"
                name="correctEmail"
                required
                placeholder="Your actual email address you can access"
              />
            </div>

            <!-- Additional Details -->
            <div class="mb-3">
              <label for="details" class="form-label"
                >Additional Information</label
              >
              <textarea
                class="form-control"
                id="details"
                name="details"
                rows="3"
                placeholder="Provide any details that can help verify your identity (signup date, last booking, etc.)"
              ></textarea>
            </div>

            <!-- Phone -->
            <div class="mb-3">
              <label for="phone" class="form-label"
                >Phone Number (Optional)</label
              >
              <input
                type="tel"
                class="form-control"
                id="phone"
                name="phone"
                placeholder="For urgent support (optional)"
              />
            </div>

            <button type="submit" class="btn btn-warning w-100">
              üÜò Request Account Recovery
            </button>
          </form>

          <div class="row mt-4">
            <div class="col-md-6">
              <h6>üîí Recovery Process:</h6>
              <ul class="small text-muted">
                <li>Identity verification</li>
                <li>Email address update</li>
                <li>New verification email sent</li>
                <li>Full account access restored</li>
              </ul>
            </div>
            <div class="col-md-6">
              <h6>‚è±Ô∏è Response Time:</h6>
