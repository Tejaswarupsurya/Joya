<script>
  function openChat() {
    alert(
      "Live chat feature coming soon! Please call or email us for immediate assistance."
    );
  }

  // Account recovery form validation
  document
    .querySelector("#account-recovery form")
    .addEventListener("submit", function (e) {
      const username = document.getElementById("username").value;
      const correctEmail = document.getElementById("correctEmail").value;

      if (!username || !correctEmail) {
        e.preventDefault();
        alert("Please fill in your username and correct email address");
        return;
      }

      if (!correctEmail.includes("@")) {
        e.preventDefault();
        alert("Please enter a valid email address");
        return;
      }

      alert(
        "Account recovery request submitted! We will contact you within 24-48 hours."
      );
    });
</script>

