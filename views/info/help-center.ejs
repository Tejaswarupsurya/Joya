<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <!-- Header -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="color: #fc5c79">Help Center</h1>
        <p class="lead text-muted">
          Get instant answers to your questions about Joya
        </p>
      </div>

      <!-- Search Help -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">
            <i class="bi bi-search me-2"></i>Search Help Topics
          </h5>
          <div class="input-group">
            <input
              type="text"
              class="form-control"
              placeholder="What can we help you with?"
            />
            <button class="btn btn-primary" type="button">Search</button>
          </div>
        </div>
      </div>

      <!-- Quick Help Categories -->
      <div class="row g-4 mb-5">
        <div class="col-md-6">
          <div class="card h-100 help-card">
            <div class="card-body text-center">
              <i
                class="bi bi-house-door display-4 category-icon mb-3"
                style="color: #fc5c79"
              ></i>
              <h5>Booking Properties</h5>
              <p class="text-muted">
                Learn how to search, book, and manage your reservations
              </p>
              <a href="#booking-help" class="btn btn-outline-primary"
                >Get Help</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card h-100 help-card">
            <div class="card-body text-center">
              <i
                class="bi bi-person-badge display-4 text-success category-icon mb-3"
              ></i>
              <h5>Host Support</h5>
              <p class="text-muted">
                Everything you need to know about hosting on Joya
              </p>
              <a href="#host-help" class="btn btn-outline-success">Get Help</a>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card h-100 help-card">
            <div class="card-body text-center">
              <i
                class="bi bi-credit-card display-4 text-warning category-icon mb-3"
              ></i>
              <h5>Payments & Refunds</h5>
              <p class="text-muted">
                Payment methods, billing, and refund policies
              </p>
              <a href="#payment-help" class="btn btn-outline-warning"
                >Get Help</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card h-100 help-card">
            <div class="card-body text-center">
              <i
                class="bi bi-shield-check display-4 text-info category-icon mb-3"
              ></i>
              <h5>Safety & Security</h5>
              <p class="text-muted">
                Trust, safety measures, and security guidelines
              </p>
              <a href="#safety-help" class="btn btn-outline-info">Get Help</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Common Questions -->
      <div id="booking-help" class="mb-5">
        <h3 class="section-header mb-4">Booking & Reservations</h3>
        <div class="accordion" id="bookingAccordion">
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button
                class="accordion-button"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#booking1"
              >
                How do I make a booking on Joya?
              </button>
            </h2>
            <div
              id="booking1"
              class="accordion-collapse collapse show"
              data-bs-parent="#bookingAccordion"
            >
              <div class="accordion-body">
                <ol>
                  <li>Search for properties using our search bar</li>
                  <li>Select your preferred dates and number of guests</li>
                  <li>Browse through available properties and read reviews</li>
                  <li>Click "Book Now" on your chosen property</li>
                  <li>Fill in your details and complete payment</li>
                  <li>Receive confirmation via email and SMS</li>
                </ol>
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#booking2"
              >
                How long do I have to confirm my booking?
              </button>
            </h2>
            <div
              id="booking2"
              class="accordion-collapse collapse"
              data-bs-parent="#bookingAccordion"
            >
              <div class="accordion-body">
                Once you submit a booking request, hosts have 24 hours to accept
                or decline. Your booking will automatically expire if not
                confirmed within this timeframe. You'll receive notifications
                about your booking status.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#booking3"
              >
                Can I modify or cancel my booking?
              </button>
            </h2>
            <div
              id="booking3"
              class="accordion-collapse collapse"
              data-bs-parent="#bookingAccordion"
            >
              <div class="accordion-body">
                Yes, you can modify or cancel bookings according to the host's
                cancellation policy. Free cancellation is usually available up
                to 48 hours before check-in. Check your booking details for
                specific terms.
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Support -->
      <div class="card support-section">
        <div class="card-body text-center">
          <h5 style="color: #fc5c79">Still need help?</h5>
          <p class="text-muted">
            Our support team is available 24/7 to assist you
          </p>
          <div class="d-flex justify-content-center gap-3">
            <a href="tel:+911234567890" class="btn btn-primary">
              <i class="bi bi-telephone me-2"></i>Call Us
            </a>
            <a href="mailto:support@joya.com" class="btn btn-outline-primary">
              <i class="bi bi-envelope me-2"></i>Email Support
            </a>
            <a href="#" class="btn btn-success">
              <i class="bi bi-chat-dots me-2"></i>Live Chat
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/search.js"></script>
