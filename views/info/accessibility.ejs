<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <!-- Header -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="color: #fc5c79">
          Accessibility
        </h1>
          <p class="lead text-muted">Making travel accessible for everyone</p>
        </div>

        <!-- Our Commitment -->
        <div class="card border-0 shadow-sm mb-5">
          <div class="card-body p-5">
            <h3 class="text-primary mb-4">Our Commitment to Accessibility</h3>
            <p class="lead text-muted mb-4">
              At Joya, we believe that everyone deserves the opportunity to
              travel and explore. We're committed to making our platform and
              accommodations accessible to guests with disabilities and diverse
              accessibility needs.
            </p>
            <div class="row g-4">
              <div class="col-md-4">
                <div class="text-center">
                  <i
                    class="bi bi-universal-access text-info display-4 mb-3"
                  ></i>
                  <h5>Universal Design</h5>
                  <p class="text-muted">
                    Properties designed for guests of all abilities and mobility
                    needs.
                  </p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="text-center">
                  <i class="bi bi-eye text-primary display-4 mb-3"></i>
                  <h5>Visual Accessibility</h5>
                  <p class="text-muted">
                    Features for guests with visual impairments and low vision
                    needs.
                  </p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="text-center">
                  <i class="bi bi-ear text-success display-4 mb-3"></i>
                  <h5>Hearing Accessibility</h5>
                  <p class="text-muted">
                    Accommodations for guests who are deaf or hard of hearing.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Accessibility Features -->
        <div class="mb-5">
          <h3 class="text-primary mb-4">Accessibility Features We Support</h3>
          <div class="row g-4">
            <div class="col-md-6">
              <div class="card h-100 border-primary">
                <div class="card-body">
                  <h5 class="card-title text-primary">
                    <i class="bi bi-door-open me-2"></i>Mobility & Physical
                    Access
                  </h5>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Step-free
                      guest entrance
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Wide doorways
                      (32+ inches)
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Accessible
                      parking spaces
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Wheelchair
                      accessible bathrooms
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Grab bars in
                      bathrooms
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Roll-in
                      showers
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card h-100 border-info">
                <div class="card-body">
                  <h5 class="card-title text-info">
                    <i class="bi bi-eye-slash me-2"></i>Vision Accessibility
                  </h5>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Braille or
                      raised text signage
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>High contrast
                      lighting
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Tactile guide
                      systems
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Audio
                      announcements
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Large print
                      materials
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i
                      >Voice-controlled devices
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card h-100 border-warning">
                <div class="card-body">
                  <h5 class="card-title text-warning">
                    <i class="bi bi-ear-fill me-2"></i>Hearing Accessibility
                  </h5>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Visual
                      notification devices
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Hearing loop
                      systems
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Closed
                      captioning on TVs
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Text-based
                      communication
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Visual fire
                      alarms
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Vibrating
                      alert devices
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card h-100 border-success">
                <div class="card-body">
                  <h5 class="card-title text-success">
                    <i class="bi bi-heart me-2"></i>Cognitive & Sensory Support
                  </h5>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Clear
                      wayfinding signage
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Quiet spaces
                      available
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Simple, clear
                      instructions
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Adjustable
                      lighting controls
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Minimal
                      background noise
                    </li>
                    <li class="mb-2">
                      <i class="bi bi-check text-success me-2"></i>Flexible
                      check-in processes
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- How to Find Accessible Properties -->
        <div class="card border-0 shadow-sm mb-5">
          <div class="card-body p-5">
            <h3 class="text-primary mb-4">How to Find Accessible Properties</h3>
            <div class="row g-4">
              <div class="col-md-4">
                <div class="text-center">
                  <div
                    class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                    style="width: 80px; height: 80px"
                  >
                    <i class="bi bi-search text-primary display-5"></i>
                  </div>
                  <h5>Use Accessibility Filters</h5>
                  <p class="text-muted">
                    Search with specific accessibility filters to find
                    properties that meet your needs.
                  </p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="text-center">
                  <div
                    class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                    style="width: 80px; height: 80px"
                  >
                    <i class="bi bi-chat-dots text-info display-5"></i>
                  </div>
                  <h5>Contact Hosts Directly</h5>
                  <p class="text-muted">
                    Message hosts about specific accessibility needs before
                    booking.
                  </p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="text-center">
                  <div
                    class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                    style="width: 80px; height: 80px"
                  >
                    <i class="bi bi-star text-success display-5"></i>
                  </div>
                  <h5>Read Reviews</h5>
                  <p class="text-muted">
                    Check reviews from other guests with similar accessibility
                    needs.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Platform Accessibility -->
        <div class="card border-0 shadow-sm mb-5">
          <div class="card-body p-5">
            <h3 class="text-primary mb-4">Platform Accessibility Features</h3>
            <div class="row g-4">
              <div class="col-md-6">
                <h5 class="text-dark">Website & App Features</h5>
                <ul class="list-unstyled">
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>Screen
                    reader compatibility
                  </li>
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>Keyboard
                    navigation support
                  </li>
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>High
                    contrast mode option
                  </li>
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i
                    >Adjustable font sizes
                  </li>
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>Alt text
                    for all images
                  </li>
                </ul>
              </div>
              <div class="col-md-6">
                <h5 class="text-dark">Communication Support</h5>
                <ul class="list-unstyled">
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i
                    >Text-based customer support
                  </li>
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>Video
                    relay services
                  </li>
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>Multiple
                    language support
                  </li>
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>Clear,
                    simple language
                  </li>
                  <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>Voice
                    message options
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Support & Resources -->
        <div class="card bg-light mb-5">
          <div class="card-body p-5">
            <h3 class="text-primary mb-4">Need Help?</h3>
            <p class="lead mb-4">
              Our accessibility support team is here to help you find the
              perfect accessible accommodation.
            </p>
            <div class="row g-3">
              <div class="col-md-4">
                <a href="/info/contact" class="btn btn-primary btn-lg w-100">
                  <i class="bi bi-telephone me-2"></i>Contact Support
                </a>
              </div>
              <div class="col-md-4">
                <a
                  href="/info/help-center"
                  class="btn btn-outline-primary btn-lg w-100"
                >
                  <i class="bi bi-question-circle me-2"></i>Help Center
                </a>
              </div>
              <div class="col-md-4">
                <a
                  href="/info/faq"
                  class="btn btn-outline-primary btn-lg w-100"
                >
                  <i class="bi bi-chat-square-text me-2"></i>Accessibility FAQ
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Feedback -->
        <div class="text-center">
          <div class="alert alert-info">
            <h5>Help Us Improve</h5>
            <p class="mb-3">
              Your feedback helps us make Joya more accessible for everyone.
              Share your suggestions with us.
            </p>
            <a href="/info/contact" class="btn btn-info">Share Feedback</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/search.js"></script>
</div>
