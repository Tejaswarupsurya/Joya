<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <!-- Header -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="color: #fc5c79">Become a Host</h1>
        <p class="lead text-muted">
          Share your space and earn extra income with Joya
        </p>
        <div class="alert alert-success d-inline-block">
          <i class="bi bi-trophy me-2"></i>
          Join 5,000+ successful hosts earning an average of ₹25,000/month
        </div>
      </div>

      <!-- Why Host with Joya -->
      <div class="card border-0 shadow-sm mb-5">
        <div class="card-body p-5">
          <h3 class="text-primary mb-4">Why Host with Joya?</h3>
          <div class="row g-4">
            <div class="col-md-4">
              <div class="text-center">
                <i class="bi bi-cash-coin text-success display-4 mb-3"></i>
                <h5>Earn Extra Income</h5>
                <p class="text-muted">
                  Turn your extra space into a reliable source of income. Our
                  hosts earn 30% more than competitors.
                </p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="text-center">
                <i class="bi bi-shield-check text-primary display-4 mb-3"></i>
                <h5>Complete Protection</h5>
                <p class="text-muted">
                  Comprehensive host protection including property damage
                  coverage up to ₹10 lakhs.
                </p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="text-center">
                <i class="bi bi-headset text-info display-4 mb-3"></i>
                <h5>24/7 Support</h5>
                <p class="text-muted">
                  Dedicated host support team available round-the-clock to help
                  with any issues.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Getting Started Steps -->
      <div class="mb-5">
        <h3 class="text-center text-primary mb-4">
          Getting Started in 4 Easy Steps
        </h3>
        <div class="row g-4">
          <div class="col-md-6 col-lg-3">
            <div class="card h-100 text-center border-primary">
              <div class="card-body">
                <div
                  class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                  style="width: 80px; height: 80px"
                >
                  <span class="display-6 fw-bold text-primary">1</span>
                </div>
                <h5>Apply to Host</h5>
                <p class="text-muted">
                  Complete our simple application form with your property
                  details and photos.
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="card h-100 text-center border-success">
              <div class="card-body">
                <div
                  class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                  style="width: 80px; height: 80px"
                >
                  <span class="display-6 fw-bold text-success">2</span>
                </div>
                <h5>Verification</h5>
                <p class="text-muted">
                  Our team verifies your property and documents within 48 hours.
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="card h-100 text-center border-warning">
              <div class="card-body">
                <div
                  class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                  style="width: 80px; height: 80px"
                >
                  <span class="display-6 fw-bold text-warning">3</span>
                </div>
                <h5>Set Your Rates</h5>
                <p class="text-muted">
                  Use our smart pricing tool to set competitive rates and
                  availability.
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="card h-100 text-center border-info">
              <div class="card-body">
                <div
                  class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                  style="width: 80px; height: 80px"
                >
                  <span class="display-6 fw-bold text-info">4</span>
                </div>
                <h5>Start Hosting</h5>
                <p class="text-muted">
                  Go live and start receiving bookings from verified guests.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="text-center">
        <div class="card bg-primary text-white">
          <div class="card-body p-5">
            <h3>Ready to Start Hosting?</h3>
            <p class="lead">
              Join thousands of successful hosts and start earning today!
            </p>
            <a href="/apply" class="btn btn-light btn-lg me-3">
              <i class="bi bi-rocket me-2"></i>Start Your Application
            </a>
            <a href="/info/contact" class="btn btn-outline-light btn-lg">
              <i class="bi bi-telephone me-2"></i>Talk to Our Team
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/search.js"></script>
